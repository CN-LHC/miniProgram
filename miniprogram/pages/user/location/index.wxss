.location_page{
  width: 100%;
  height: 100%;
}
.company_info {
  width: 100%;
  position: absolute;
  bottom: 0px;
  left: 0;
  font-size: 15px;
  padding: 10px 0 16px 12px;
  background-color: rgba(255, 255, 255, 1);
}
.company_info_item {
  height: 24px;
  display: flex;
}
.company_info_item_name {
    width: 84px;
    text-align: right;
    font-weight: bold;
}
.company_info_item_address {
    opacity: 0.8;
    font-weight: bold;
}
.company_info_item_iphone {
    color: #0cab06;
    font-weight: bold;
    cursor: pointer;
}